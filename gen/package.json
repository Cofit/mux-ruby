{
    "private": true,
    "scripts": {
        "oas": "openapi-generator",


        "current-version": "./scripts/get-version.bash",

        "compute-next-version:patch": "semver $(yarn run --silent current-version) -i patch",
        "compute-next-version:minor": "semver $(yarn run --silent current-version) -i minor",
        "compute-next-version:major": "semver $(yarn run --silent current-version) -i major",

        "bump-version:patch": "sed -i \"s/$(yarn run -s current-version)/$(yarn run -s compute-next-version:patch)/g\" $(./scripts/get-version-file.bash)",
        "bump-version:minor": "sed -i \"s/$(yarn run -s current-version)/$(yarn run -s compute-next-version:minor)/g\" $(./scripts/get-version-file.bash)",
        "bump-version:major": "sed -i \"s/$(yarn run -s current-version)/$(yarn run -s compute-next-version:major)/g\" $(./scripts/get-version-file.bash)",

        "build": ""
        

    },
    "dependencies": {
        "node-jq": "1.12.0",
        "openapi-generator": "0.1.39",
        "semver": "7.3.4"
    }
}
